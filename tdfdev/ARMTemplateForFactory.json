				"typeProperties": {
					"baseUrl": "[parameters('LS_KV_properties_typeProperties_baseUrl')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/LS_MYSQ_GENERIC')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"parameters": {
					"LS_PARAM_SERVER": {
						"type": "string"
					},
					"LS_PARAM_DATABASE": {
						"type": "string"
					},
					"LS_PARAM_USER": {
						"type": "string"
					},
					"LS_PARAM_PASSWORD": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "MySql",
				"typeProperties": {
					"server": "[parameters('LS_MYSQ_GENERIC_properties_typeProperties_server')]",
					"port": 3306,
					"database": "[parameters('LS_MYSQ_GENERIC_properties_typeProperties_database')]",
					"username": "[parameters('LS_MYSQ_GENERIC_properties_typeProperties_username')]",
					"sslMode": 1,
					"useSystemTrustStore": 0,
					"password": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "LS_KV",
							"type": "LinkedServiceReference",
							"parameters": {
								"LS_PARAM_KV_NAME": "tkvdev"
							}
						},
						"secretName": {
							"value": "@linkedService().LS_PARAM_PASSWORD",
							"type": "Expression"
						}
					},
					"driverVersion": "v2"
				},
				"connectVia": {
					"referenceName": "SELFHOSTED",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/integrationRuntimes/SELFHOSTED')]",
				"[concat(variables('factoryId'), '/linkedServices/LS_KV')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/TR_SCHEDULE_DAILY_00_00')]",
